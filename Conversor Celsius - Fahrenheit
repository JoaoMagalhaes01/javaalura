import java.util.Scanner; // 1. Importar o Scanner

public class DesafioTemperatura {

    public static void main(String[] args) {
        // Input de leitura do usuário
        Scanner leitura = new Scanner(System.in);
        System.out.println("Digite a temperatura em Celsius:");
        
        // Input da temperatura em Celsius
        double temperaturaEmCelsius = leitura.nextDouble(); 
        double temperaturaEmFahrenheit = (temperaturaEmCelsius * 1.8) + 32;

        String mensagem = String.format("A temperatura de %.1f Celsius é equivalente a %.1f Fahrenheit", temperaturaEmCelsius, temperaturaEmFahrenheit);
        System.out.println(mensagem);
        int temperaturaEmFahrenheitInteira = (int) temperaturaEmFahrenheit;
        System.out.println("A temperatura em Fahrenheit inteira é: " + temperaturaEmFahrenheitInteira);
        
        leitura.close(); // Fechar o scanner
    }
}